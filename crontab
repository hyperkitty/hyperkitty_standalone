# This goes in /etc/cron.d/.
# Replace "apache" by your webserver user ("www-data" on Debian systems) and
# set the path to the Django project directory

@hourly  apache  django-admin --pythonpath /path/to/hyperkitty_standalone --settings settings runjobs hourly
@daily   apache  django-admin --pythonpath /path/to/hyperkitty_standalone --settings settings runjobs daily
@weekly  apache  django-admin --pythonpath /path/to/hyperkitty_standalone --settings settings runjobs weekly
@monthly apache  django-admin --pythonpath /path/to/hyperkitty_standalone --settings settings runjobs monthly
@yearly  apache  django-admin --pythonpath /path/to/hyperkitty_standalone --settings settings runjobs yearly
2,17,32,47 * * * * apache  django-admin --pythonpath /path/to/hyperkitty_standalone --settings settings runjobs quarter_hourly
